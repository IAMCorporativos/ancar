<div class="row">
  <div  class="small-12 columns">
      <%= render "shared/back" %>
  </div>
  <div class="small-12 columns">
    <div class="small-10 columns">
      <h2><%= t("manager.#{Task.name.underscore.pluralize}.#{action_name}.title") %>  </h2>
    </div>
    <div class="column small-2">
      <% if params[:modifiable] == 'true' %>
        <br><%= link_to t("manager.tasks.index.create"),
                   new_manager_task_path(period_id: params["period_id"],
                         organization_type_id: params["organization_type_id"],
                              main_process_id: params["main_process_id"],
                              sub_process_id: params["sub_process_id"]),
                   class: "button large success hollow" %>
      <% end %>
    </div>
  </div>
</div>

<div>
  <% if @tasks.nil?  || @tasks.empty? %>
    <strong> <%=t("manager.tasks.index.empty") %> </strong>
  <% else %>
    <%= render 'item_list' %>
  <% end %>
</div>
