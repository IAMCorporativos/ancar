<%= form_for [:supervisor, @period] do |f| %>

  <%= render 'shared/errors', resource: @period %>

  <div class="row">
    <div class="small-12 medium-4 column">
      <h4><%= f.label :organization_type_id, t('supervisor.periods.form.organization_type') %></h4>
      <%= f.select :organization_type_id, options_for_select(OrganizationType.select_options,
                                                             @period.organization_type_id),
                   prompt: t('supervisor.periods.form.organization_type'), label: false,
                   placeholder: t('supervisor.periods.form.organization_type') %>
    </div>


    <div class="small-8 columns">
      <%= f.label :description, t('supervisor.periods.form.description') %>
      <%= f.text_field :description, label: false,
                        placeholder: t('supervisor.periods.form.description') %>
    </div>
    <div class="small-12 columns">
      <h6><%= t('supervisor.periods.form.dates') %> </h6>
      <div class="small-3 columns date-format">
        <%= f.label :started_at, t('supervisor.periods.form.started_at') %>
        <%= f.date_field :started_at, label: false,
                              class: 'date-format',
                              placeholder: t('supervisor.periods.form.started_at'),
                              id: 'started_at', dateFormat: 'd-mm-y' %>

      </div>
      <div class="small-3 columns end date-format">
        <%= f.label :ended_at, t('supervisor.periods.form.ended_at') %>
        <%= f.date_field :ended_at, label: false,
                        placeholder: t('supervisor.periods.form.ended_at'),
                        id: 'ended_at' %>
      </div>
    </div>

    <div class="small-12 column">
      <h6><%= t('supervisor.periods.form.data_collect') %> </h6>
      <div class="small-3 columns end date-format">
        <%= f.label :opened_at, t('supervisor.periods.form.opened_at') %>
        <%= f.date_field :opened_at, label: false,
                          placeholder: t('supervisor.periods.form.opened_at'),
                          id: 'opened_at' %>
      </div>
      <div class="small-3 columns end date-format">
        <%= f.label :closed_at, t('supervisor.periods.form.closed_at') %>
        <%= f.date_field :closed_at, label: false,
                          placeholder: t('supervisor.periods.form.closed_at'),
                          id: 'closed_at' %>
      </div>
    </div>

    <div class="small-4 columns">
      <%= f.check_box :hide_status, label: t('supervisor.periods.form.hide_status'),
                      placeholder: t('supervisor.periods.form.hide_status') %>
    </div>
    <br>

    <% if params[:action] != 'edit' && params[:action] != 'update' %>
      <div class="small-3 columns end">
        <h4>
          <%= f.label :id, t('supervisor.periods.form.period') %>
          <%= f.select :id, options_for_select(Period.select_options,), include_blank: true,
                       label: false, placeholder: t('supervisor.periods.form.period') %>
        </h4>
      </div>
    <% end %>
    <div class="actions small-12 columns">
      <%= f.submit(class: 'button hollow', value: t("actions.#{action_name}")) %>
    </div>
  </div>
<% end %>
