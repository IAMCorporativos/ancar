<%= render partial: 'supervisor/shared/header',
           locals: {title: t("supervisor.indicators.#{action_name}.title",
                             process_name: t("supervisor.process_name.plural.#{process_name(@sub_process.main_process.period, controller_name)}")).capitalize,
                    button: t('supervisor.indicators.index.create',
                              process_name: t("supervisor.process_name.plural.#{process_name(@sub_process.main_process.period, controller_name)}")),
                    path: new_supervisor_indicator_path(sub_process_id: @sub_process.id),
                    modifiable: @sub_process.modifiable?,
                    period: @sub_process.main_process.period, main_process: @sub_process.main_process,
                    sub_process: @sub_process, indicator: nil, indicator_metric: nil  } %>

<div>
  <% if @indicators.nil? || @indicators.empty? %>
    <strong> <%=t('supervisor.indicators.index.empty',
                  process_name: t("supervisor.process_name.plural.#{process_name(@sub_process.main_process.period, controller_name)}")) %>
    </strong>
  <% else %>
    <%= render 'item_list' %>
  <% end %>
</div>
