  <div class=row >
    <div class="medium-12 small-12 columns">
      <div class="medium-3 small-3 columns">-</div>
      <div class="medium-6 small-6 columns">
        <%= form_tag( entry_indicators_path,  method: 'get') do -%>
          <%= label_tag(:period_id, t('entry_indicators.index.select_period')) %>
          <% selected = @period_id.nil? ? 0 : @period_id %>
          <%= select_tag('period_id', options_for_select(@select_periods, selected), {prompt: t('entry_indicators.index.select')}) %>
          <%= submit_tag t('entry_indicators.index.select_period'), organization_type_id: @organization_type_id , class: 'expanded button'%>
       <% end %>
       </div>
      <div class="medium-3 small-3 columns"></div>
    </div>
  </div>
